<div class="container">

<h1>投稿フォーム</h1>
<hr>

<% if @spot.errors.any? %>
  <ul>
    <% @spot.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @spot, local: true, multipart: true do |f| %>
  <%= render partial: "form_fields", locals: { f: f } %>
  <%= render "form_star" %>
  <%= render "address_form", f: f %>

  <div class="text-center mt-5">
    <%= f.submit "投稿する", class: "btn btn-primary btn-lg w-100" %>
  </div>
<% end %>

<div class="text-center mt-3">
  <%= link_to "一覧に戻る", spots_path, class: "text-secondary" %>
</div>
</div>

<%= javascript_pack_tag "jpostal", 'data-turbolinks-track': 'reload' %>