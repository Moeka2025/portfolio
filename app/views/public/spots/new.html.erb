<div class="container">

<h1>投稿フォーム</h1>
<hr>

<% if @spot.errors.any? %>
  <ul>
    <% @spot.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @spot do |f| %>
  <%= render "form_fields", f: f %>
  <%= render "form_star" %>

  <div class="mb-3">
    <%= f.submit "投稿", class: "btn btn-primary" %>
  </div>

<% end %>
</div>
