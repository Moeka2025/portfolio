<div class="spot">
  <h3 class="highlight-title mb-3">【 <%= spot.title %> 】</h3>

  <br>

  <%= link_to spot_path(spot) do %>
    <% if spot.image.attached? %>
      <%= image_tag spot.image.variant(resize_to_limit: [500, 500]),class: "spot-image" %>
    <% else %>
      <%= image_tag 'いらすとや_no_image.jpg', size: "500x500" %>
    <% end %>
  <% end %>
</div>