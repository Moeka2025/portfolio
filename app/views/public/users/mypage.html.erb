<div class="container">
<h1><%= @user.name %>さんのマイページ</h1>
<hr>

<div class="row">
  <% if current_user.avatar.attached? %>
    <%= image_tag @user.avatar.variant(resize_to_limit: [150, 150]), class: "rounded-circle" %>
  <% else %>
    <%= image_tag "いらすとや_no_image.jpg", size: "150x150", class: "rounded-circle" %>
  <% end %>
  <div class="col">
    <%= link_to "プロフィール編集", edit_user_registration_path, class: "btn btn-warning" %>
  </div>
</div>

<h1>My投稿一覧</h1>
<hr>
<% @spots.each do |spot| %>
  <div class="row">
    <% if spot.image.attached? %>
      <%= image_tag spot.image.variant(resize_to_limit: [300, 300]) %>
    <% else %>
      <%= image_tag 'いらすとや_no_image.jpg', size: "300x300" %>
    <% end %>

    <div class="col">
      <h5>タイトル  【 <%= spot.title %> 】</h5>
      <p><%= spot.body %></p> <!-- 説明文 -->
      <%= link_to '詳細を見る', spot_path(spot), class: 'btn btn-info' %>
    </div>
  </div>
  <hr>
<% end %>
