<div class="row">
  <div class="col-3">
    <% if current_user.avatar.attached? %>
      <%= image_tag @user.avatar.variant(resize_to_limit: [150, 150]), class: "rounded-circle" %>
    <% else %>
      <%= image_tag "いらすとや_no_image.jpg", size: "150x150", class: "rounded-circle" %>
    <% end %>
  </div>

  <div class="col-9">
    <div class="introduction-box">
      <h5>自己紹介</h5>
      <p><%= simple_format(@user.introduction) %></p>
    </div>
    
    <%= yield if block_given? %>
  </div>
</div>