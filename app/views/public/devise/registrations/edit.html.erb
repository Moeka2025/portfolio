<h2><%= resource_name.to_s.humanize %>さんの編集フォーム</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :name, "氏名" %><br />
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label :avatar, "アイコン画像" %><br />
    <% if resource.avatar.attached? %>
      <%= image_tag resource.avatar.variant(resize_to_limit: [100, 100]) %><br />
    <% end %>
    <%= f.file_field :avatar, class: "form-control" %>
  </div>

  <hr>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>
      現在、確認待ちのメールアドレス: <%= resource.unconfirmed_email %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :password, "新しいパスワード" %> <i>(変更しない場合は空欄のままにしてください)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em>最低 <%= @minimum_password_length %> 文字が必要です</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "現在のパスワード" %> <i>(変更を保存するには必須です)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "更新する", class: "btn btn-primary" %>
  </div>
<% end %>

<hr>

<h3>退会</h3>

<div>
  不要になった場合はこちらから削除できます:
  <%= button_to "アカウントを削除する", registration_path(resource_name),
    data: { confirm: "本当に削除しますか？" },
    method: :delete,
    class: "btn btn-danger" %>
</div>

<hr>

<%= link_to "戻る", root_path, class: "btn btn-secondary" %>
