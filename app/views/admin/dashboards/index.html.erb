<div class="container mt-4">

  <h2 class="mb-4">全ユーザ一覧</h2>

  <table class="table table-striped table-bordered">
    <thead class="table-light">
      <tr>
        <th>名前</th>
        <th>メールアドレス</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td class="text-center">
            <%= link_to "削除", admin_user_path(user),
                method: :delete,
                data: { confirm: "本当に削除しますか？" },
                class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-3">
    <%= link_to "投稿一覧へ戻る", admin_spots_path, class: "btn btn-secondary" %>
  </div>

</div>