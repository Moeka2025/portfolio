<div class="container mt-4">

  <h2 class="mb-4">投稿一覧（管理者）</h2>

  <table class="table table-striped table-bordered">
    <thead class="table-light">
      <tr>
        <th>タイトル</th>
        <th>投稿者</th>
        <th class="text-center">操作</th>
      </tr>
    </thead>

    <tbody>
      <% @spots.each do |spot| %>
        <tr>
          <td><%= spot.title %></td>
          <td><%= spot.user.name %></td>
          <td class="text-center">
            <%= link_to "削除", admin_spot_path(spot),
                method: :delete,
                data: { confirm: "本当に削除しますか？" },
                class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-3">
    <%= link_to "ユーザーの一覧へ戻る", admin_dashboards_path, class: "btn btn-secondary" %>
  </div>

</div>