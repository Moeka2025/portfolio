<h1>投稿フォーム</h1>

<%= form_with model: @spot do |f| %>

  <div class="form-group">
    <%= f.label :image, "画像" %><br>
    <%= f.file_field :"image" %>

  <div class="form-group">
    <%= f.label :shop_name, "タイトル" %><br>
    <%= f.text_field :shop_name %>
  </div>

  <div class="form-group">
    <%= f.label :body, "本文" %><br>
    <%= f.text_area :body %>
  </div>

  <%= f.submit "投稿" %>
<% end %>

<% if @spot.errors.any? %>
  <ul>
    <% @spot.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
